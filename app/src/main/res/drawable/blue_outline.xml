<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Button when it is NOT pressed -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorBlueButtonBackground" />


            <!-- The outline colour and width -->
            <!--<stroke android:width="3dp" android:color="@color/colorButtonBackground" />-->

            <!-- How round the corners are -->
            <corners android:radius="50dp" />
        </shape>
    </item>


    <!-- Button when it is PRESSED -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorBlueButtonPressedBackground" />


            <!-- The outline colour and width -->
            <stroke android:width="3dp" android:color="@color/colorBlueButtonStroke" />

            <!-- How round the corners are -->
            <corners android:radius="50dp" />
        </shape>
    </item>
</selector>
